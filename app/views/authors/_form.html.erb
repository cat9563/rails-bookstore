<div class="form-group">
        <%= text_field_tag :first_name, @author.first_name, placeholder:'First_name', class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= text_field_tag :last_name, @author.last_name, placeholder:'Last_name', class: 'form-control' %>
     </div>
     <div class="form-group">
        <%= text_field_tag :bio, @author.bio, placeholder:'Bio', class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= text_field_tag :picture_url, @author.picture_url, placeholder:'Picture_URL', class: 'form-control' %>
    </div>
    <div class="form-group">
      Select Author
    </div>
    <%= submit_tag 'Save', class: 'btn btn-primary'%>