<h1>Authors</h1>
<%= link_to 'New', '/authors/new', class:'btn btn-primary'%>
<% @authors.each do |author| %>
<div class="media">
  <img class="d-flex align-self-end mr-3 book-thumb" src="<%= author.picture_url %>" 
  <div class="media-body">
    <h5 class="mt-0"><%= link_to author.first_name, "/authors/#{author.id}"%><%= link_to author.last_name, "/authors/#{author.id}"%></h5>
    <p><%=author.bio%></p>
    <%= link_to 'Edit', "/authors/#{author.id}/edit", class: 'btn-btn default' %>
</div>
<% end %>